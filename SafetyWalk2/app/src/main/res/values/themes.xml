<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="BaseTheme.MotionGuard" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="android:textColorSecondary">?attr/colorOnBackground</item>
        <item name="android:textColorHint">@color/text_hint_light</item>

        <!-- Button styles -->
<!--        两种button，button和materialButton。-->
<!--        这里并没有使用buttonstyle。 用的实际上是material风格，因此只有materialButtonStyle才其作用 -->
<!--        <item name="buttonStyle">@style/Widget.MotionGuard.Button</item>-->
        <item name="materialButtonStyle">@style/Widget.MotionGuard.Button</item>

        <!-- Switch styles -->
        <item name="switchStyle">@style/Widget.MotionGuard.Switch</item>
    </style>

    <!-- Blue Theme (Default) -->
    <style name="Theme.MotionGuard.Blue" parent="BaseTheme.MotionGuard">
        <!-- Primary brand colors -->
<!--       name 指定属性名，可以是系统，也可以是自定义(attrs.xml定义的)。 如果属性名找不到就会报错，如下，没有fuck这个属性名 -->
<!--        <item name="fuck">@color/blue_primary</item>-->

        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/blue_accent</item>
        <item name="colorSecondaryVariant">@color/blue_primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.MotionGuard.Dark" parent="BaseTheme.MotionGuard">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
    </style>

    <!-- Green Theme -->
    <style name="Theme.MotionGuard.Green" parent="BaseTheme.MotionGuard">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/green_accent</item>
        <item name="colorSecondaryVariant">@color/green_primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <!-- Purple Theme -->
    <style name="Theme.MotionGuard.Purple" parent="BaseTheme.MotionGuard">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/purple_accent</item>
        <item name="colorSecondaryVariant">@color/purple_primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <!-- Button style -->
    <style name="Widget.MotionGuard.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Switch style -->
    <style name="Widget.MotionGuard.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
<!--        <item name="thumbTint">?attr/colorPrimary</item>-->
<!--        <item name="trackTint">?attr/colorSecondary</item>-->
<!--        不能只是单独设置颜色，应该设置selecotr，因为switch有选中，没选中的状态-->
        <!-- res/color/switch_color.xml。 selector以文件名调用 -->
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>


